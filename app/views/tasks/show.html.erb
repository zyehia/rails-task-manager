<div class="row justify-content-between align-items-center">
  <h1><%= @task.title %></h1>
  <a class="btn btn-light" href="<%= edit_task_path %>"><i class="far fa-edit"></i> Edit this task</a>
</div>
<div class="row details-container">
  <%= @task.details %>
</div>

<div class="completion-container">
  <% if @task.completed %>
    <input type="checkbox" checked> This task is completed
  <% else %>
    <input type="checkbox"> This task is not completed yet
  <% end %>
</div>

<div class="row">
  <%= link_to "Back to list", tasks_path %>
</div>