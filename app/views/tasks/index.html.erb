<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
    <p class="strike">
    <% else %>
      <p>
    <% end %>
      <input type="checkbox" <%="checked" if task.completed %> >
      <%= link_to task.title, task_path(task.id) %>
      (<%= link_to "delete", task_path(task.id), method: :delete, data: { confirm: "Are you sure?" } %>)
    </p>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>
